	<contribution type="Command" id="C_CreateNewMap">
	<name>新規マップ作成</name>
	<class name="nft.ui.core.CreateMapForm" codebase=".UI"/>
	<command type="ModalForm" menupath="FILE\GAME|NEWMAP" />
	</contribution>

	<contribution type="TerrainGenerator" id="FlatTerrainGenerator">
	<name>シンプル平坦マップ</name>
	<description>真っ平らな地形を生成します</description>
	<class name="nft.contributions.game.CtbFlatTerrainGenerator" codebase=".Core"/>
	</contribution>
	<contribution type="WorldDivider" id="SimpleDivider">
	<name>シンプル格子分割</name>
	<description>等サイズの格子状に分割します</description>
	<class name="nft.contributions.game.CtbSimpleDivider" codebase=".Core"/>
	</contribution>
	
